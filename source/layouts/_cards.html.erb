<div class="container" id="home-flats">
  <h4 class="text-center">Recent flats</h4>
  <div class="row">
    <% data.cities.each do |city, city_info| %>
      <div class="col-xs-12 col-md-6 col-lg-4">
        <div class="card" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.2) 100%), url('https://kitt.lewagon.com/placeholder/cities/<%= city %>');">
          <h2><%= city_info.city %></h2>
          <h3><%= city_info.listing %></h3>
          <p><%= city_info.description %></p>
          <img src="https://kitt.lewagon.com/placeholder/users/<%= city_info.github_username %>" class="card-user" alt="avatar">
          <a href="flats/<%= city_info.github_username %>.html" class="card-link"></a>
        </div>
      </div>
    <% end %>
  </div>
</div>
